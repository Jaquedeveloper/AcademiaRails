<h1>Listing usuarios</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Altura</th>
    <th>Sexo</th>
    <th>Idade</th>
    <th>Peso inicial</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @usuarios.each do |usuario| %>
  <tr>
    <td><%= usuario.nome %></td>
    <td><%= usuario.altura %></td>
    <td><%= usuario.sexo %></td>
    <td><%= usuario.idade %></td>
    <td><%= usuario.peso_inicial %></td>
    <td><%= link_to 'Show', usuario %></td>
    <td><%= link_to 'Edit', edit_usuario_path(usuario) %></td>
    <td><%= link_to 'Excluir', usuario, method: :delete, data: { confirm: 'Deseja realmente excluir?' } %></td>
  </tr>
<% end %>
</table>

