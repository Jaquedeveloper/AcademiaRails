<% @refeicaos.each do |refeicao| %>
  <tr>
    <td><%= refeicao.Tipo_Refeicao %></td>
    <td><%= refeicao.Usuario %></td>
    <td><%= refeicao.calorias_consumidas %></td>
    <td><%= refeicao.hora %></td>
    <td><%= refeicao.data %></td>
    <td><%= link_to 'Show', refeicao %></td>
    <td><%= link_to 'Edit', edit_refeicao_path(refeicao) %></td>
    <td><%= link_to 'Excluir', refeicao, method: :delete, data: { confirm: 'Deseja realmente excluir?' } %></td>
